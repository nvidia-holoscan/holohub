{
	"application": {
		"name": "Holoscan ROS2 Publisher/Subscriber Examples",
		"authors": [
			{
				"name": "Holoscan SDK Team",
				"affiliation": "NVIDIA"
			}
		],
		"language": "C++",
		"version": "1.0.0",
		"changelog": {
			"1.0": "Initial Release"
		},
		"holoscan_sdk": {
			"minimum_required_version": "3.0",
			"tested_versions": [
				"3.0"
			]
		},
		"dockerfile": "applications/holoscan_ros2/Dockerfile",
		"platforms": [
			"x86_64",
			"aarch64"
		],
		"tags": ["Robotics", "ROS2", "Publisher", "Subscriber"],
		"ranking": 1,
		"requirements": {},
		"dependencies": {
			"external": {}
		},
		"default_mode": "publisher",
		"modes": {
			"publisher": {
				"description": "ROS2 publisher that sends simple string messages",
				"run": {
					"command": "<holohub_app_bin>/holoscan_ros2_simple_publisher",
					"workdir": "holohub_bin"
				}
			},
			"subscriber": {
				"description": "ROS2 subscriber that receives simple string messages",
				"run": {
					"command": "<holohub_app_bin>/holoscan_ros2_simple_subscriber",
					"workdir": "holohub_bin"
				}
			}
		}
	}
}