{
	"application": {
		"name": "GStreamer Video Recorder",
		"authors": [
			{
				"name": "Holoscan Team",
				"affiliation": "NVIDIA"
			}
		],
		"language": "C++",
		"version": "1.0",
		"changelog": {
			"1.0": "Initial Release"
		},
