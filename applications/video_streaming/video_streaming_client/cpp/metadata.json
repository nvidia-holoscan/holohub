{
    "application": {
        "name": "Video Streaming Client Demo",
        "description": "C++ implementation of video streaming client using Holoscan SDK streaming operators",
        "authors": [
            {
                "name": "Holoscan Team",
                "affiliation": "NVIDIA"
            }
        ],
        "language": "C++",
        "version": "1.0.0",
        "changelog": {
            "1.0.0": "Initial release of video streaming client with V4L2 and video replay support"
        },
        "holoscan_sdk": {
            "minimum_required_version": "3.5.0",
            "tested_versions": [
                "3.5.0"
            ]
        },
        "platforms": [
            "x86_64",
            "aarch64"
        ],
        "tags": [
            "Streaming",
            "Video",
            "Client",
            "Real-time",
            "Demo",
            "V4L2"
        ],
        "ranking": 2,
        "requirements": {
            "operators": [
                {
                    "name": "video_streaming",
                    "version": "1.1.0"
                }
            ]
        },
        "dockerfile": "applications/video_streaming/Dockerfile",
        "default_mode": "replayer",
        "modes": {
            "replayer": {
                "description": "Streaming client using video file replay",
                "run": {
                    "command": "<holohub_app_bin>/streaming_client_demo_wrapper.sh --config streaming_client_demo_replayer.yaml",
                    "workdir": "holohub_bin"
                }
            },
            "v4l2": {
                "description": "Streaming client using V4L2 camera (webcam)",
                "run": {
                    "command": "<holohub_app_bin>/streaming_client_demo_wrapper.sh --config streaming_client_demo.yaml",
                    "workdir": "holohub_bin"
                }
            }
        }
    }
}
