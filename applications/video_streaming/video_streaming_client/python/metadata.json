{
    "application": {
        "name": "Video Streaming Client Demo (Python)",
        "description": "Python implementation of video streaming client using Holoscan SDK streaming operators",
        "authors": [
            {
                "name": "Holoscan Team",
                "affiliation": "NVIDIA"
            }
        ],
        "language": "Python",
        "version": "1.0.0",
        "changelog": {
            "1.0.0": "Initial release of Python video streaming client"
        },
        "holoscan_sdk": {
            "minimum_required_version": "3.5.0",
            "tested_versions": [
                "3.5.0"
            ]
        },
        "platforms": [
            "x86_64",
            "aarch64"
        ],
        "tags": [
            "Streaming",
            "Video",
            "Client",
            "Real-time",
            "Demo",
            "V4L2"
        ],
        "ranking": 2,
        "requirements": {
            "operators": [
                {
                    "name": "video_streaming",
                    "version": "1.1.0"
                }
            ]
        },
        "dockerfile": "applications/video_streaming/Dockerfile",
        "default_mode": "replayer",
        "modes": {
            "replayer": {
                "description": "Streaming client (Python implementation) - Video replayer",
                "run": {
                    "command": "python3 streaming_client_demo.py --source replayer",
                    "workdir": "holohub_bin"
                }
            },
            "v4l2": {
                "description": "Streaming client (Python implementation) - V4L2 camera",
                "run": {
                    "command": "python3 streaming_client_demo.py --source v4l2 --width 640 --height 480",
                    "workdir": "holohub_bin"
                }
            }
        }
    }
}