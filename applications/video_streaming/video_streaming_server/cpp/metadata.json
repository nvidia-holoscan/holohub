{
    "application": {
        "name": "Video Streaming Server Demo (C++)",
        "description": "C++ implementation of video streaming server using Holoscan SDK streaming operators",
        "authors": [
            {
                "name": "Holoscan Team",
                "affiliation": "NVIDIA"
            }
        ],
        "language": "C++",
        "version": "1.0.0",
        "changelog": {
            "1.0.0": "Initial release of video streaming server with bidirectional streaming support"
        },
        "holoscan_sdk": {
            "minimum_required_version": "3.5.0",
            "tested_versions": [
                "3.5.0"
            ]
        },
        "platforms": [
            "x86_64",
            "aarch64"
        ],
        "tags": [
            "Streaming",
            "Video",
            "Server",
            "Real-time",
            "Network"
        ],
        "ranking": 2,
        "requirements": {
            "operators": [
                {
                    "name": "video_streaming_server",
                    "version": "1.1.0"
                }
            ]
        },
        "dockerfile": "applications/video_streaming/Dockerfile",
        "default_mode": "server",
        "modes": {
            "server": {
                "description": "Run the streaming server",
                "run": {
                    "command": "<holohub_app_bin>/streaming_server_demo_wrapper.sh",
                    "workdir": "holohub_bin"
                }
            }
        }
    }
}
