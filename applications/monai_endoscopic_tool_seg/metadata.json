{
	"application": {
		"name": "Endoscopy Tool Segmentation using MONAI",
		"authors": [
			{
				"name": "Jin Li",
				"affiliation": "NVIDIA"
			}
		],
		"language": "Python",
		"version": "1.1",
		"changelog": {
			"1.0": "Initial Release",
			"1.1": "Update TensorRTInferenceOp to InferenceOp"
		},
		"holoscan_sdk": {
			"minimum_required_version": "0.6.0",
			"tested_versions": [
				"0.6.0"
			]
		},
		"platforms": [
			"x86_64", "aarch64"
		],
		"tags": ["Healthcare AI", "Video", "Surgical AI", "Endoscopy", "Segmentation"],
		"ranking": 2,
		"requirements": {
			"libraries": []
		},
		"default_mode": "replayer",
		"modes": {
			"replayer": {
				"description": "Use a pre-recorded video as input",
				"run": {
					"command": "python3 <holohub_app_source>/tool_segmentation.py --data <holohub_data_dir>",
					"workdir": "holohub_bin"
				}
			},
			"aja": {
				"description": "Use an AJA device for video input",
				"build": {
					"depends": ["aja_source"],
					"docker_build_args": ["--target", "holohub-aja"]
				},
				"run": {
					"command": "python3 <holohub_app_source>/tool_segmentation.py --data <holohub_data_dir>",
					"workdir": "holohub_bin"
				}
			}
		}
	}
}
