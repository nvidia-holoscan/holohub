{
	"application": {
		"name": "Pipeline Visualization",
		"description": "Real-time visualization of data from Holoscan applications using NATS messaging and web-based dashboards",
		"authors": [
			{
				"name": "Holoscan Team",
				"affiliation": "NVIDIA"
			}
		],
		"language": "Python",
		"version": "0.1.0",
		"changelog": {
			"0.1.0": "Initial Release"
		},
		"holoscan_sdk": {
			"minimum_required_version": "3.8.0",
			"tested_versions": [
				"3.8.0"
			]
		},
		"platforms": [
			"x86_64",
			"aarch64"
		],
		"tags": [
			"Visualization",
			"NATS",
			"Remote"
		],
		"ranking": 1,
		"requirements": {},
		"default_mode": "standard",
		"modes": {
			"static_web": {
				"description": "Static visualization of pipeline data",
				"run": {
					"command": "python3 <holohub_app_source>/../visualizer/visualizer_static.py",
					"workdir": "holohub_bin"
				},
				"env": {
					"PYTHONPATH": "<holohub_app_bin>/../flatbuffers:<PYTHONPATH>"
				}
			},
			"dynamic_web": {
				"description": "Dynamic visualization of pipeline data",
				"run": {
					"command": "python3 <holohub_app_source>/../visualizer/visualizer_dynamic.py",
					"workdir": "holohub_bin"
				},
				"env": {
					"PYTHONPATH": "<holohub_app_bin>/../flatbuffers:<PYTHONPATH>"
				}
			},
			"standard": {
				"description": "Standard mode for pipeline visualization",
				"run": {
					"command": "python3 <holohub_app_source>/pipeline_visualization.py",
					"workdir": "holohub_bin"
				}
			}
		}
	}
}