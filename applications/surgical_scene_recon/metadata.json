{
	"application": {
		"name": "Surgical Scene Reconstruction",
		"authors": [
			{
				"name": "Holoscan Team",
				"affiliation": "NVIDIA"
			}
		],
		"language": "Python",
		"version": "1.0",
		"changelog": {
			"1.0": "Initial Release - Static and Dynamic Gaussian Splatting with Temporal Deformation"
		},
		"holoscan_sdk": {
			"minimum_required_version": "3.7.0",
			"tested_versions": [
				"3.7.0"
			]
		},
		"platforms": [
			"x86_64"
		],
		"tags": ["Healthcare AI", "Endoscopy", "3D Reconstruction", "Gaussian Splatting", "Neural Rendering", "Temporal Deformation"],
		"ranking": 2,
		"requirements": {
			"pytorch": ">=2.1.0",
			"gsplat": ">=1.0.0",
			"cupy": "cuda12x",
			"data": ["EndoNeRF dataset"]
		},
		"default_mode": "training_quick",
		"modes": {
			"training_quick": {
				"description": "Testing only (lower quality): 30 frames, 500 iterations (~2 min) - verifies setup works",
				"run": {
					"command": "python3 <holohub_app_source>/train_standalone.py --data_dir <holohub_data_dir>/EndoNeRF/pulling --output_dir <holohub_app_source>/output --training_iterations 500 --coarse_iterations 50 --num_frames 30",
					"workdir": "holohub_app_source"
				}
			},
			"training_full": {
				"description": "Production quality (recommended): all 63 frames, 2000 iterations (~5 min) - smooth temporal deformation",
				"run": {
					"command": "python3 <holohub_app_source>/train_standalone.py --data_dir <holohub_data_dir>/EndoNeRF/pulling --output_dir <holohub_app_source>/output --training_iterations 2000 --coarse_iterations 200",
					"workdir": "holohub_app_source"
				}
			},
			"dynamic_rendering": {
				"description": "High-quality rendering with temporal deformation (requires pre-trained checkpoint)",
				"run": {
					"command": "python3 <holohub_app_source>/demo_dynamic_rendering_viz.py --data_dir <holohub_data_dir>/EndoNeRF/pulling --checkpoint <holohub_app_source>/output/trained_model/ckpts/fine_best_psnr.pt",
					"workdir": "holohub_app_source"
				}
			}
		}
	}
}
