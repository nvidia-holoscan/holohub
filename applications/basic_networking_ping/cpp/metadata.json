{
	"application": {
		"name": "Basic Networking Ping",
		"authors": [
			{
				"name": "Cliff Burdick",
				"affiliation": "NVIDIA"
			}
		],
		"language": "C++",
		"version": "1.0",
		"changelog": {
			"1.0": "Initial Release"
		},
		"holoscan_sdk": {
			"minimum_required_version": "0.5.0",
			"tested_versions": [
				"0.5.0",
				"3.9.0",
				"3.10.0",
				"3.11.0"
			]
		},
		"platforms": [
			"x86_64",
			"aarch64"
		],
		"tags": ["Networking and Distributed Computing", "Distributed", "UDP", "Communications"],
		"ranking": 1,
		"requirements": {
			"gxf_extensions": [
				{
					"name": "basic_network",
					"version": "1.0"
				}
			]
		},
		"default_mode": "flexible",
		"modes": {
			"flexible": {
				"description": "Start the receiver or transmitter with the specified arguments",
				"run": {
					"command": "<holohub_app_bin>/basic_networking_ping",
					"workdir": "holohub_app_bin"
				}
			},
			"rx": {
				"description": "Start the receiver",
				"run": {
					"command": "<holohub_app_bin>/basic_networking_ping basic_networking_ping_rx.yaml",
					"workdir": "holohub_app_bin"
				}
			},
			"tx": {
				"description": "Start the transmitter",
				"run": {
					"command": "<holohub_app_bin>/basic_networking_ping basic_networking_ping_tx.yaml",
					"workdir": "holohub_app_bin"
				}
			}
		}
	}
}
