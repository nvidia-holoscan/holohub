{
	"application": {
		"name": "Basic Networking Ping",
		"authors": [
			{
				"name": "Cliff Burdick",
				"affiliation": "NVIDIA"
			}
		],
		"language": "Python",
		"version": "1.0",
		"changelog": {
			"1.0": "Initial Release"
		},
		"platforms": ["x86_64", "aarch64"],
		"tags": ["Networking and Distributed Computing", "Distributed", "UDP", "Communications"],
		"holoscan_sdk": {
			"minimum_required_version": "0.6.0",
			"tested_versions": [
				"0.6.0",
				"2.1.0",
				"2.2.0",
				"3.9.0"
			]
		},
		"ranking": 1,
		"requirements": {
			"operators": [{
				"name": "basic_network",
				"version": "1.0"
			}]
		},
		"default_mode": "flexible",
		"modes": {
			"flexible": {
				"description": "Start the receiver or transmitter with the specified arguments",
				"run": {
					"command": "python3 <holohub_app_source>/basic_networking_ping.py",
					"workdir": "holohub_app_bin"
				}
			},
			"rx": {
				"description": "Start the receiver",
				"run": {
					"command": "python3 <holohub_app_source>/basic_networking_ping.py basic_networking_ping_rx.yaml",
					"workdir": "holohub_app_bin"
				}
			},
			"tx": {
				"description": "Start the transmitter",
				"run": {
					"command": "python3 <holohub_app_source>/basic_networking_ping.py basic_networking_ping_tx.yaml",
					"workdir": "holohub_app_bin"
				}
			}
		}
	}
}