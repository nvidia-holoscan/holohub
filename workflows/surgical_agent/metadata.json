{
	"workflow": {
		"name": "Surgical Agent Workflow with Video Streaming",
		"authors": [
			{
				"name": "Holoscan Team",
				"affiliation": "NVIDIA"
			}
		],
		"language": "Python",
		"version": "1.0",
		"changelog": {
			"1.0": "Initial Release"
		},
		"holoscan_sdk": {
			"minimum_required_version": "3.0.0",
			"tested_versions": [
				"3.8.0"
			]
		},
		"platforms": [
			"x86_64",
			"aarch64"
		],
		"tags": [
			"Healthcare AI",
			"VLM",
			"Agent",
			"Video Streaming",
			"WebRTC",
			"MONAI"
		],
		"ranking": 2,
		"requirements": {
			"data": [
				{
					"name": "VLM-Surgical-Agent-Framework",
					"description": "MONAI Vision Language Model Surgical Agent Framework for interactive surgical video analysis",
					"url": "https://github.com/Project-MONAI/VLM-Surgical-Agent-Framework.git",
					"branch": "main"
				}
			],
			"libraries": [
				{
					"name": "docker",
					"description": "Docker and Docker Compose for running surgical agent services"
				},
				{
					"name": "git",
					"description": "Git for cloning the surgical agent framework"
				}
			],
			"system": {
				"gpu_memory": "10GB+ VRAM recommended for AI models",
				"ports": [
					{
						"port": 8080,
						"description": "WebRTC video streaming server"
					},
					{
						"port": 8000,
						"description": "LLM Server (vLLM)"
					},
					{
						"port": 43001,
						"description": "Whisper ASR service"
					},
					{
						"port": 8050,
						"description": "Surgical agent Flask application"
					}
				]
			}
		},
		"dependencies": {
			"applications": [
				"webrtc_video_server"
			]
		},
		"modes": {
			"all": {
				"description": "Build and run everything (default)",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh all",
					"workdir": "holohub_root"
				}
			},
			"build-video": {
				"description": "Build video streaming server app only",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh build-video",
					"workdir": "holohub_root"
				}
			},
			"run-video": {
				"description": "Run video streaming server app only",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh run-video",
					"workdir": "holohub_root"
				}
			},
			"setup-surgical": {
				"description": "Clone/update surgical framework only",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh setup-surgical",
					"workdir": "holohub_root"
				}
			},
			"run-surgical": {
				"description": "Run surgical agents only",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh run-surgical",
					"workdir": "holohub_root"
				}
			},
			"stop-all": {
				"description": "Stop all services",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh stop-all",
					"workdir": "holohub_root"
				}
			},
			"stop-video": {
				"description": "Stop video streaming server app",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh stop-video",
					"workdir": "holohub_root"
				}
			},
			"stop-surgical": {
				"description": "Stop surgical agents services",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh stop-surgical",
					"workdir": "holohub_root"
				}
			},
			"clean": {
				"description": "Stop all services and clean up",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh clean",
					"workdir": "holohub_root"
				}
			},
			"help": {
				"description": "Show help message",
				"run": {
					"command": "bash <holohub_app_source>/surgical_agent.sh help",
					"workdir": "holohub_root"
				}
			}
		},
		"default_mode": "all",
		"services": [
			{
				"name": "Video Streaming Server",
				"url": "http://127.0.0.1:8080",
				"description": "WebRTC video streaming interface"
			},
			{
				"name": "Surgical Agent Workflow Interface",
				"url": "http://127.0.0.1:8050",
				"description": "Main surgical agent web interface for video analysis"
			}
		]
	}
}
