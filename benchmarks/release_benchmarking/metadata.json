{
	"benchmark": {
		"name": "Holoscan Release Benchmarking",
		"description": "Reproducible benchmarking workflow to evaluate HoloHub performance with a Holoscan SDK release.",
		"authors": [
			{
				"name": "Holoscan Team",
				"affiliation": "NVIDIA"
			}
		],
		"version": "0.1.0",
		"changelog": {
			"0.1.0": "Initial Release"
		},
		"holoscan_sdk": {
			"minimum_required_version": "2.3.0",
			"tested_versions": [
				"2.3.0"
			]
		},
		"platforms": [
			"amd64",
			"arm64"
		],
		"tags": [
			"Benchmarking",
			"Performance",
			"Reporting",
			"Release"
		],
		"ranking": 3,
		"dependencies": {
			"applications": [
				{
					"name": "Endoscopy Tool Tracking"
				},
				{
					"name": "Holoscan Flow Benchmarking"
				},
				{
					"name": "Multi-AI Ultrasound"
				}
			]
		},
		"run": {
			"command": "bash <holohub_app_source>/run_benchmarks.sh",
			"workdir": "<app_source_dir>"
		}
	}
}
