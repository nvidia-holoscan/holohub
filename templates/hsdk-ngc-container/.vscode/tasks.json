{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/"
            },
            "command": "cmake",
            "args": [
                "-S",
                "$SOURCE_DIR",
                "-B",
                "$BUILD_DIR",
                "-DHoloscan_ROOT=$HOLOSCAN_ROOT",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": [
                "CMake: Clean"
            ]
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/"
            },
            "command": "[ -d $BUILD_DIR ] && rm -r $BUILD_DIR || mkdir -p $BUILD_DIR",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "$BUILD_DIR",
                "-j"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn": [
                "CMake: Configure"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "CMake: Rebuild",
            "type": "shell",
            "command": "cmake",
            "dependsOn": [
                "CMake: Clean",
                "CMake: Configure",
                "CMake: Build"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}