# CTest script to test all HoloHub applications
# This script finds all applications with metadata.json and creates tests for each

cmake_minimum_required(VERSION 3.20)

# Set the holohub root directory
if(NOT DEFINED HOLOHUB_ROOT)
  get_filename_component(HOLOHUB_ROOT "${CMAKE_CURRENT_LIST_DIR}/../.." ABSOLUTE)
endif()

# Set CTest directories
set(CTEST_SOURCE_DIRECTORY "${CMAKE_CURRENT_LIST_DIR}/test_all_applications")
set(CTEST_BINARY_DIRECTORY "${HOLOHUB_ROOT}/build-all-applications")

set(CTEST_BUILD_NAME "Holohub-AllApps")

# Set the CMake generator
if(NOT DEFINED CTEST_CMAKE_GENERATOR)
  set(CTEST_CMAKE_GENERATOR "Unix Makefiles")
endif()

# Option to build only (set BUILD_ONLY=ON to only build, not run)
if(NOT DEFINED BUILD_ONLY)
  set(BUILD_ONLY OFF)
endif()

# Start CTest
ctest_start(Experimental)

# Configure with the holohub root path
set(CONFIGURE_OPTIONS "-DHOLOHUB_ROOT=${HOLOHUB_ROOT}")
if(BUILD_ONLY)
  list(APPEND CONFIGURE_OPTIONS "-DBUILD_ONLY=ON")
  message("Build mode: BUILD ONLY")
else()
  message("Build mode: RUN")
endif()

ctest_configure(OPTIONS "${CONFIGURE_OPTIONS}")

# Run the tests
ctest_test(RETURN_VALUE test_result 
          )

# Submit results if requested
if(DEFINED CTEST_SUBMIT_URL)
  ctest_submit()
endif()

# Report results
if(test_result)
  message(FATAL_ERROR "\nSome tests failed! Return value: ${test_result}")
else()
  message("\nâœ“ All tests passed!")
endif()
