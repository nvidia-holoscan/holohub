# If CTEST_SOURCE_DIRECTORY is not set we set to the current holohhub
if(NOT CTEST_SOURCE_DIRECTORY)
  set(CTEST_SOURCE_DIRECTORY "${CMAKE_CURRENT_LIST_DIR}/../..")
endif()

if(NOT CTEST_BINARY_DIRECTORY)
  set(CTEST_BINARY_DIRECTORY "${CTEST_SOURCE_DIRECTORY}-test")
endif()

if(NOT CTEST_BUILD_NAME)
  set(CTEST_BUILD_NAME "holohub")
endif()

if(NOT HOLOSCAN_DIR)
  set(HOLOSCAN_DIR "/opt/nvidia/holoscan/lib/cmake")
endif()

set(CTEST_UPDATE_COMMAND "git")
set(CTEST_CMAKE_GENERATOR "Ninja")

ctest_empty_binary_directory(${CTEST_BINARY_DIRECTORY})

# Copy the CDash configurations
file(COPY
     ${CMAKE_CURRENT_LIST_DIR}/CTestCustom.cmake
     DESTINATION ${CTEST_BINARY_DIRECTORY})
ctest_read_custom_files("${CTEST_BINARY_DIRECTORY}")

set(configure_options
  ${CONFIGURE_OPTIONS}
  -DCMAKE_CUDA_COMPILER=/usr/local/cuda/bin/nvcc
  -Dholoscan_DIR=${HOLOSCAN_DIR}
  -DHOLOHUB_DATA_DIR=${CTEST_BINARY_DIRECTORY}/data/holohub-${HOLOHUB_BRANCH}
  -DAPP_${APP}=ON
)

# Default nightly start time
set(CTEST_NIGHTLY_START_TIME "06:00:00 UTC")

ctest_start(Nightly)
ctest_update()
ctest_configure(OPTIONS "${configure_options}")
ctest_build()
ctest_test()
ctest_submit()
